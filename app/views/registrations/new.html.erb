<h2>Sign up</h2>

<%= form_with model: @user, url: registrations_path do |form| %>
  <div class="form-inputs">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div class="form-inputs">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div class="form-inputs">
    <%= form.submit 'Sign_up' %>
  </div>
<% end %>
